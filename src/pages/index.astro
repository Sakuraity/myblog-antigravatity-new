---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import NoteCard from '../components/NoteCard.astro';
import LibraryCard from '../components/LibraryCard.astro';
import NewYearCountdown from '../components/NewYearCountdown.astro';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 5);

const notesRaw = (await getCollection('notes')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
).slice(0, 3); // Reduced to 3 for cleaner look

const notes = await Promise.all(notesRaw.map(async (note) => {
    const { Content } = await note.render();
    return { note, Content };
}));

const libraryItems = (await getCollection('library')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
).slice(0, 4); // 4 items for a balanced grid
---

<Layout title="Kangyuan's Blog">
	<!-- Hero Section -->
	<section class="min-h-[50vh] flex flex-col justify-center py-20 relative overflow-hidden">
        <!-- Background Decoration -->
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl -z-10"></div>


		<div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
			<div class="lg:col-span-8 flex flex-col gap-6">
				<h1 class="font-serif font-bold tracking-tight text-text-light dark:text-text-dark leading-tight">
                    <span class="block text-4xl md:text-5xl lg:text-7xl mb-2">Hammer Seeking Nail</span>
                    <span class="block text-2xl md:text-3xl lg:text-4xl text-primary font-normal italic">
                        Logic <span class="mx-1">·</span> Emotion <span class="mx-1">·</span> Elegance
                    </span>
				</h1>
				<p class="text-lg md:text-xl text-text-muted-light dark:text-text-muted-dark max-w-2xl leading-relaxed opacity-80 font-sans">
					安放思考，自由表达，分享创造
				</p>
                
                <div class="flex gap-4 pt-4">
                    <a href="/blog" class="px-6 py-2 bg-text-light dark:bg-white text-bg-light dark:text-black font-medium rounded-full hover:opacity-90 transition-opacity">
                        Read Essays
                    </a>
                    <a href="/about" class="px-6 py-2 border border-black/10 dark:border-white/10 text-text-light dark:text-text-dark font-medium rounded-full hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
                        About Me
                    </a>
                </div>
			</div>
			
			<div class="lg:col-span-4 w-full flex justify-center lg:justify-end">
                <div class="transform rotate-2 hover:rotate-0 transition-all duration-500 ease-out hover:scale-105">
				    <NewYearCountdown />
                </div>
			</div>
		</div>
	</section>

	<div class="space-y-32 pb-20">
		<!-- Featured Essays Section -->
		<section>
			<div class="flex items-end justify-between mb-12">
				<h2 class="font-serif text-3xl font-bold text-text-light dark:text-text-dark relative inline-block">
                    Latest Essays
                    <span class="absolute -bottom-2 left-0 w-12 h-1 bg-primary rounded-full"></span>
                </h2>
				<a href="/blog" class="group flex items-center gap-2 text-sm font-medium text-text-muted-light dark:text-text-muted-dark hover:text-primary transition-colors">
					View Archive 
					<span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
				</a>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{posts.map((post) => (
					<article class="group relative flex flex-col p-6 bg-white dark:bg-white/5 rounded-2xl border border-black/5 dark:border-white/5 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
						<div class="mb-4 flex items-center gap-3 text-xs font-medium text-text-muted-light dark:text-text-muted-dark">
							<time datetime={post.data.pubDate.toISOString()} class="bg-gray-100 dark:bg-white/10 px-2 py-1 rounded">
								{post.data.pubDate.toLocaleDateString('zh-CN', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</time>
                            {post.data.category && (
                                <span class="text-primary tracking-wide uppercase">{post.data.category}</span>
                            )}
						</div>
						
						<h3 class="text-xl font-serif font-bold leading-snug text-text-light dark:text-text-dark mb-3 group-hover:text-primary transition-colors">
							<a href={`/posts/${post.slug}/`}>
								<span class="absolute inset-0"></span>
								{post.data.title}
							</a>
						</h3>
						
						<p class="text-sm text-text-muted-light dark:text-text-muted-dark leading-relaxed line-clamp-3 mb-4 flex-grow">
							{post.data.description}
						</p>

						<div class="pt-4 border-t border-black/5 dark:border-white/5 flex items-center justify-between">
                            <div class="flex -space-x-2 overflow-hidden">
                                {post.data.tags && post.data.tags.slice(0, 3).map(tag => (
                                    <span class="inline-block px-2 py-0.5 text-[10px] bg-gray-50 dark:bg-white/5 border border-white dark:border-gray-800 rounded-full text-text-muted-light dark:text-text-muted-dark">
                                        #{tag}
                                    </span>
                                ))}
                            </div>
                            <span class="text-primary text-sm opacity-0 group-hover:opacity-100 transition-opacity transform translate-x-2 group-hover:translate-x-0">
                                Read &rarr;
                            </span>
						</div>
					</article>
				))}
                
                <!-- "More" Card -->
                <a href="/blog" class="group flex flex-col items-center justify-center p-6 rounded-2xl border-2 border-dashed border-black/5 dark:border-white/10 hover:border-primary/30 hover:bg-primary/5 transition-all text-center">
                    <span class="text-3xl mb-2 text-text-muted-light dark:text-text-muted-dark group-hover:text-primary transition-colors">&rarr;</span>
                    <span class="font-serif font-medium text-lg text-text-light dark:text-text-dark">Explore more essays</span>
                </a>
			</div>
		</section>

		<!-- Split Section: Notes & Library -->
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
            <!-- Notes Column -->
            <section class="lg:col-span-12 xl:col-span-7">
                <div class="flex items-end justify-between mb-10">
                    <h2 class="font-serif text-3xl font-bold text-text-light dark:text-text-dark relative inline-block">
                        Fleeting Notes
                        <span class="absolute -bottom-2 left-0 w-12 h-1 bg-primary rounded-full"></span>
                    </h2>
                    <a href="/notes" class="group flex items-center gap-2 text-sm font-medium text-text-muted-light dark:text-text-muted-dark hover:text-primary transition-colors">
                        All Notes 
                        <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
                    </a>
                </div>

                <div class="relative">
                    <!-- Vertical Line for timeline -->
                    <div class="absolute left-[3px] top-4 bottom-4 w-0.5 bg-gray-100 dark:bg-white/5"></div>
                    
                    <div class="space-y-10 pl-2">
                        {notes.map(({ note, Content }) => (
                            <div class="relative pl-8">
                                <!-- Dot moved to component or handle here? NoteCard has its own line. 
                                     Let's use NoteCard as is, but maybe wrap it differently. 
                                     Actually NoteCard has `border-l-2` built in. 
                                     Let's hide my custom line above and use NoteCard's built-in 
                                     but style it better via container. -->
                                <NoteCard 
                                    date={note.data.date}
                                    tags={note.data.tags}
                                    truncate={true}
                                >
                                    <Content />
                                </NoteCard>
                            </div>
                        ))}
                        {notes.length === 0 && (
                             <p class="text-text-muted-light dark:text-text-muted-dark text-sm italic pl-8">No notes yet.</p>
                        )}
                    </div>
                </div>
            </section>

            <!-- Library/Collections Column -->
            <section class="lg:col-span-12 xl:col-span-5">
                <div class="flex items-end justify-between mb-10">
                    <h2 class="font-serif text-3xl font-bold text-text-light dark:text-text-dark relative inline-block">
                        Recent Collections
                        <span class="absolute -bottom-2 left-0 w-12 h-1 bg-primary rounded-full"></span>
                    </h2>
                    <a href="/library" class="group flex items-center gap-2 text-sm font-medium text-text-muted-light dark:text-text-muted-dark hover:text-primary transition-colors">
                        Full Library 
                        <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
                    </a>
                </div>

                <div class="grid grid-cols-2 gap-4">
                     {libraryItems.map(item => (
                        <LibraryCard 
                            type={item.data.type}
                            title={item.data.title}
                            artist={item.data.artist}
                            spotifyUrl={item.data.spotifyUrl}
                            source={item.data.source}
                            videoId={item.data.videoId}
                            author={item.data.author}
                            status={item.data.status}
                            rating={item.data.rating}
                            link={item.data.link}
                            comment={item.data.comment}
                            date={item.data.date}
                            coverImage={item.data.coverImage}
                            hidePlayer={true}
                        />
                    ))}
                </div>
            </section>
        </div>
	</div>
</Layout>
